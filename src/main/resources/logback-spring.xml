<?xml version="1.0" encoding="UTF-8"?>

<!-- auto-reload of the logback configuration when the file changes (logback periodically checks it) -->
<configuration scan="true">

<!-- register Spring Bootâ€™s extra pattern converters -->
    <!-- allows to colorize parts of the log output (console) -->
    <conversionRule conversionWord="clr" converterClass="org.springframework.boot.logging.logback.ColorConverter"/>

    <!-- nicer exception formatting  -->
    <conversionRule conversionWord="wex" converterClass="org.springframework.boot.logging.logback.WhitespaceThrowableProxyConverter"/>

    <!-- nicer exception formatting  -->
    <conversionRule conversionWord="wEx" converterClass="org.springframework.boot.logging.logback.ExtendedWhitespaceThrowableProxyConverter"/>

    <!-- logs' path root directory -->
    <property name="LOG_PATH" value="./logs"/>

    <!-- console log pattern -->
    <property name="CONSOLE_LOG_PATTERN" value="%clr(%d{yyyy-MM-dd HH:mm}){faint} %clr(%-5level) %clr(%class{0}){cyan} - %msg%n"/>

    <!-- file log pattern -->
    <property name="FILE_LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm} %-5level %logger{30} - %msg%n"/>

<!-- where logs go -->
    <!-- destination for console output -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- destination for file output -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">

        <!-- current log file (during run) -->
        <file>${LOG_PATH}/current.log</file>

        <!-- rolling policy (daily log files with) -->
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">

            <!-- rolling logs file pattern -->
            <fileNamePattern>${LOG_PATH}/%d{yyyy-MM-dd}.%i.log</fileNamePattern>

            <!-- max file size of one rolling log -->
            <maxFileSize>50MB</maxFileSize>

            <!-- max days of history -->
            <maxHistory>30</maxHistory>
        </rollingPolicy>

        <!-- file encoding format -->
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- what parts of the program logs at what level (overridden/configured by application.yaml) -->
    <logger name="com.neo.tx" level="INFO"/>
    <logger name="org.hibernate.SQL" level="INFO"/>
    <logger name="org.springframework" level="INFO"/>

    <!-- default logger for unspecified parts of the program -->
    <root level="INFO">

    <!-- everything that is logged (root + child loggers) uses these output streams -->
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>

</configuration>